# VerifyAI Environment Variables
# העתק קובץ זה ל-.env ומלא את הערכים

# Database
DATABASE_URL=postgresql+asyncpg://verifyai:verifyai_pass@db:5432/verifyai

# Redis (for Celery)
REDIS_URL=redis://redis:6379/0

# AWS S3 (לשלב מאוחר יותר)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1
S3_BUCKET_NAME=verifyai-media

# AI Models API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# HITL
HITL_CONFIDENCE_THRESHOLD=0.75

# Security
SECRET_KEY=change-me-in-production
API_KEY_SALT=change-me-too
